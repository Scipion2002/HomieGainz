{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5003",
    "ServiceDiscoveryProvider": { "Type": "Eureka" }
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/users",
      "UpstreamHttpMethod": [ "Get", "Post", "Put" ],
      "DownstreamPathTemplate": "/api/users",
      "UseServiceDiscovery": true,
      "ServiceName": "user-service",
      "DownstreamScheme": "http"
    },
    {
      "UpstreamPathTemplate": "/gateway/users/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ],
      "DownstreamPathTemplate": "/api/users/{id}",
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "ServiceName": "user-service"
      //"DownstreamHostAndPorts": [
      //{
      //"Host": "user-service",
      //"Port": 51173
      //}
      //]
    },
    {
      "UpstreamPathTemplate": "/gateway/users/GetUser/{username}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/users/GetUser/{username}",
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "ServiceName": "user-service"
    },
    {
      "UpstreamPathTemplate": "/gateway/users/questionareTotal/{id}/{total}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/users/questionareTotal/{id}/{total}",
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "ServiceName": "user-service"
    },
    {
      "UpstreamPathTemplate": "/gateway/users/changeMealPlan/{userId}/{mealPlanId}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/users/changeMealPlan/{userId}/{mealPlanId}",
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "ServiceName": "user-service"
    },
    {
      "UpstreamPathTemplate": "/gateway/users/changeWorkoutPlan/{userId}/{workoutPlanId}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/users/changeWorkoutPlan/{userId}/{workoutPlanId}",
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "ServiceName": "user-service"
    },
    {
      "UpstreamPathTemplate": "/gateway/users/getFriendList/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/users/getFriendList/{id}",
      "DownstreamScheme": "http",
      "UseServiceDiscovery": true,
      "ServiceName": "user-service"
    }
  ]
}
